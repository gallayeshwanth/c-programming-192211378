# c-programming-192211378
#include <stdio.h>

int main() {

  int i, n, sum = 0;

  printf("Enter the value of n: ");

  scanf("%d", &n);

  for (i = 1; i <= n; i++) {

    if (i % 2 == 1) {

      sum += i;

    } else {

      sum -= i;

    }

  }

  printf("Sum of the series 1-2+3-4+5....%d: %d\n", n, sum);

  return 0;

}
